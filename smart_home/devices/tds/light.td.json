{
  "@context": "https://www.w3.org/2022/wot/td/v1.1",
  "@type": "Thing",
  "id": "urn:dev:ops:light-001",
  "title": "Smart Light",
  "description": "A smart light that can be turned on/off and toggled",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": "nosec_sc",
  "properties": {
    "on": {
      "type": "boolean",
      "title": "On/Off State",
      "description": "Current state of the light (true = on, false = off)",
      "readOnly": false,
      "observable": false
    },
    "brightness": {
      "type": "integer",
      "title": "Brightness",
      "description": "Brightness level (0-100)",
      "minimum": 0,
      "maximum": 100,
      "readOnly": false
    }
  },
  "actions": {
    "toggle": {
      "title": "Toggle",
      "description": "Toggle the light on or off"
    },
    "fadeIn": {
      "title": "Fade In",
      "description": "Gradually increase brightness",
      "input": {
        "type": "object",
        "properties": {
          "duration": {
            "type": "integer",
            "description": "Duration in seconds",
            "minimum": 1,
            "maximum": 60
          }
        }
      }
    }
  }
}