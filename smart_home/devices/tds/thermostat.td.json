{
  "@context": "https://www.w3.org/2022/wot/td/v1.1",
  "@type": "Thing",
  "id": "urn:dev:ops:thermostat-001",
  "title": "Smart Thermostat",
  "description": "A smart thermostat for temperature control",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": "nosec_sc",
  "properties": {
    "temperature": {
      "type": "number",
      "title": "Current Temperature",
      "description": "Current room temperature in Celsius",
      "readOnly": true,
      "unit": "celsius"
    },
    "targetTemperature": {
      "type": "number",
      "title": "Target Temperature",
      "description": "Desired temperature in Celsius",
      "minimum": 10,
      "maximum": 30,
      "readOnly": false,
      "unit": "celsius"
    },
    "mode": {
      "type": "string",
      "title": "Operating Mode",
      "description": "Current operating mode",
      "enum": ["off", "heat", "cool", "auto"],
      "readOnly": false
    },
    "humidity": {
      "type": "number",
      "title": "Humidity",
      "description": "Current humidity percentage",
      "minimum": 0,
      "maximum": 100,
      "readOnly": true,
      "unit": "percent"
    }
  },
  "actions": {
    "setSchedule": {
      "title": "Set Schedule",
      "description": "Set a temperature schedule",
      "input": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "description": "Time in HH:MM format"
          },
          "temperature": {
            "type": "number",
            "description": "Target temperature"
          }
        },
        "required": ["time", "temperature"]
      }
    }
  },
  "events": {
    "temperatureAlert": {
      "title": "Temperature Alert",
      "description": "Triggered when temperature goes outside safe range",
      "data": {
        "type": "object",
        "properties": {
          "temperature": {
            "type": "number"
          },
          "threshold": {
            "type": "string",
            "enum": ["high", "low"]
          }
        }
      }
    }
  }
}