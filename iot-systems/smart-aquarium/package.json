{
  "name": "smart-aquarium",
  "version": "1.0.0",
  "description": "Simulated WoT devices for smart aquarium",
  "type": "module",
  "scripts": {
    "start:devices": "npm-run-all --parallel devices:*",
    "devices:alertSystem": "node devices/alertSystem.js",
    "devices:backupPower": "node devices/backupPower.js",
    "devices:clock": "node devices/clock.js",
    "devices:filterMonitor": "node devices/filterMonitor.js",
    "devices:foodDispensor": "node devices/foodDispensor.js",
